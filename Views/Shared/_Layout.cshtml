<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>@ViewData["Title"] - claims_website</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/claims_website.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
</head>
<body class="app-body">
    <header class="app-header shadow-sm">
        <nav class="navbar navbar-expand-md navbar-dark bg-black">
            <div class="container">
                <a class="navbar-brand fw-semibold" asp-area="" asp-controller="Home" asp-action="Index">
                    <span class="brand-dot"></span>
                    claims_website
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#mainNav" aria-controls="mainNav" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                @if (User.Identity != null && User.Identity.IsAuthenticated)
                {
                    <div class="collapse navbar-collapse" id="mainNav">
                        <ul class="navbar-nav ms-auto align-items-center gap-md-2">
                            <li class="nav-item"><a class="nav-link @(ViewContext.RouteData.Values["controller"]?.ToString() == "Home" ? "active" : null)" asp-area="" asp-controller="Home" asp-action="Index">Home</a></li>
                            <li class="nav-item"><a class="nav-link @(ViewContext.RouteData.Values["action"]?.ToString() == "Policy" ? "active" : null)" asp-area="" asp-controller="Policy" asp-action="Policy">My Policies</a></li>
                            <li class="nav-item"><a class="nav-link @(ViewContext.RouteData.Values["action"]?.ToString() == "Claim" ? "active" : null)" asp-area="" asp-controller="Claim" asp-action="Claim">My Claims</a></li>
                            <li class="nav-item"><a class="nav-link @(ViewContext.RouteData.Values["action"]?.ToString() == "AccountDetails" ? "active" : null)" asp-area="" asp-controller="Account" asp-action="AccountDetails">Account Details</a></li>
                            <li class="nav-item"><a class="btn btn-sm btn-outline-danger px-3" asp-area="" asp-controller="Account" asp-action="Logout">Logout</a></li>
                            
                        </ul>
                    </div>
                }
                else
                {
                    <div class="collapse navbar-collapse" id="mainNav">
                        <ul class="navbar-nav ms-auto align-items-center gap-md-2">
                            <li class="nav-item"><a class="nav-link @(ViewContext.RouteData.Values["controller"]?.ToString() == "Home" ? "active" : null)" asp-area="" asp-controller="Home" asp-action="Index">Home</a></li>
                            <li class="nav-item"><a class="nav-link @(ViewContext.RouteData.Values["action"]?.ToString() == "Register" ? "active" : null)" asp-area="" asp-controller="Account" asp-action="Register">Register</a></li>
                            <li class="nav-item"><a class="btn btn-sm btn-primary px-3 @(ViewContext.RouteData.Values["action"]?.ToString() == "Login" ? "active" : null)" asp-area="" asp-controller="Account" asp-action="Login">Login</a></li>
                            
                        </ul>
                    </div>
                }
            </div>
        </nav>
    </header>

    <main class="app-main py-4">
        <div class="container">
            @RenderBody()
        </div>
    </main>

    <footer class="app-footer border-top bg-black">
        <div class="container d-flex flex-column flex-md-row gap-2 justify-content-between py-3 small text-light">
            <span>&copy; 2025 claims_website</span>
            <span><a class="link-light" asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a></span>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
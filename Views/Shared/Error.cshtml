@model ErrorViewModel
@{
    ViewData["Title"] = "Error";
}

<div class="minimal-container minimal-narrow accent-card">
    <h2 class="page-title title-gradient">Something went wrong</h2>
    <p class="page-subtitle">An error occurred while processing your request.</p>
    <div class="card-elevated p-3 mt-3">
        @if (Model.ShowRequestId)
        {
            <div>
                <span class="text-muted">Request ID:</span> <code>@Model.RequestId</code>
            </div>
        }
        <p class="mb-0 text-muted small mt-2">If the problem persists, please contact support.</p>
    </div>
</div>

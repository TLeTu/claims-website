@model claims_website.Models.AccountDetailsViewModel
@{
    ViewData["Title"] = "Account Details";
}

<div class="minimal-container accent-card">
    <h2 class="page-title title-gradient">Account Details</h2>
    <form method="post" class="row g-3 mt-2">
        <input type="hidden" asp-for="UserId" />
        <input type="hidden" asp-for="CustomerId" />

        <div class="col-12 col-md-6 minimal-field">
            <label asp-for="Email">Email</label>
            <input asp-for="Email" class="form-control" readonly />
        </div>
        <div class="col-12 col-md-6 minimal-field">
            <label asp-for="Phone">Phone</label>
            <input asp-for="Phone" class="form-control" />
        </div>

        <div class="col-12 col-md-6 minimal-field">
            <label>Created At</label>
            <input type="text" class="form-control" value="@Model.CreatedAt.ToString("yyyy-MM-dd HH:mm")" readonly />
        </div>
        <div class="col-12 col-md-6 minimal-field">
            <label asp-for="Name">Full Name</label>
            <input asp-for="Name" class="form-control" />
        </div>

        <div class="col-12 col-md-6 minimal-field">
            <label asp-for="DateOfBirth">Date of Birth</label>
            <input asp-for="DateOfBirth" type="date" class="form-control" />
        </div>
        <div class="col-12 col-md-6 minimal-field">
            <label asp-for="Borough">Borough</label>
            <input asp-for="Borough" class="form-control" />
        </div>

        <div class="col-12 col-md-6 minimal-field">
            <label asp-for="Neighborhood">Neighborhood</label>
            <input asp-for="Neighborhood" class="form-control" />
        </div>
        <div class="col-12 col-md-6 minimal-field">
            <label asp-for="ZipCode">Zip Code</label>
            <input asp-for="ZipCode" class="form-control" />
        </div>

        <div class="col-12">
            <button type="submit" class="btn btn-primary">Save Changes</button>
        </div>
    </form>
</div>
@model claims_website.Models.LoginViewModel
@{
    ViewData["Title"] = "Login";
}

<div class="text-center">
    <div class="container d-flex justify-content-center align-items-center" style="min-height: 60vh;">
        <form method="post" asp-controller="Account" asp-action="LoginPost" class="w-100" style="max-width: 400px;">
            <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
            <h2 class="mb-4">Login</h2>
            <div class="mb-3 text-start">
                <input asp-for="Email" class="form-control" id="email" name="email" placeholder="Email" required />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>

            <div class="mb-3 text-start">
                <input asp-for="Password" class="form-control" placeholder="Password" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>

            <button type="submit" class="btn btn-primary w-100">Submit</button>
        </form>
    </div>

</div>


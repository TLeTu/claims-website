@model claims_website.Models.RegisterViewModel
@{
    ViewData["Title"] = "Register";
}

<div class="minimal-container minimal-narrow accent-card">
    <h2 class="page-title title-gradient">Create your account</h2>
    <p class="page-subtitle mb-4">It only takes a minute to get started.</p>
    <form method="post" asp-controller="Account" asp-action="RegisterPost" class="stack">
        <div asp-validation-summary="ModelOnly" class="alert alert-danger py-2" role="alert"></div>
        <div class="minimal-field">
            <label asp-for="Email">Email</label>
            <input asp-for="Email" id="email" name="email" placeholder="you@example.com" required class="form-control" />
            <span asp-validation-for="Email" class="text-danger small"></span>
        </div>
        <div class="minimal-field">
            <label asp-for="Phone">Phone</label>
            <input asp-for="Phone" id="phone" name="phone" placeholder="(000) 000-0000" required class="form-control" />
            <span asp-validation-for="Phone" class="text-danger small"></span>
        </div>
        <div class="minimal-field">
            <label asp-for="Password">Password</label>
            <input asp-for="Password" placeholder="Create a password" class="form-control" />
            <span asp-validation-for="Password" class="text-danger small"></span>
        </div>
        <div class="minimal-field">
            <label asp-for="ConfirmPassword">Confirm Password</label>
            <input asp-for="ConfirmPassword" placeholder="Re-enter password" class="form-control" />
            <span asp-validation-for="ConfirmPassword" class="text-danger small"></span>
        </div>
        <button type="submit" class="btn btn-primary w-100">Create Account</button>
    </form>
</div>

@model claims_website.Models.ClaimDetailsViewModel
@{
    ViewData["Title"] = "Claim #" + Model.ClaimNo;
}

<div class="minimal-container accent-card">
    <h2 class="page-title title-gradient">Claim #@Model.ClaimNo</h2>

    <div class="row g-4 mt-1">
        <div class="col-12 col-lg-8">
            <div class="card-elevated p-3">
                <div class="row g-3">
                    <div class="col-6 col-md-4">
                        <div class="text-muted small">Type</div>
                        <div class="fw-semibold">@Model.IncidentType</div>
                    </div>
                    <div class="col-6 col-md-4">
                        <div class="text-muted small">Status</div>
                        <div>
                            <span class="badge-soft badge-green">PAID</span>
                        </div>
                    </div>
                    <div class="col-12 col-md-4">
                        <div class="text-muted small">Filed On</div>
                        <div class="fw-semibold">@(Model.ClaimDate?.ToShortDateString() ?? "N/A")</div>
                    </div>
                </div>
                <hr class="my-3" />
                <div class="row g-3">
                    <div class="col-12 col-md-4">
                        <div class="text-muted small">Vehicle Repairs</div>
                        <div class="fw-semibold">@(Model.VehicleCost?.ToString("C0") ?? "N/A")</div>
                    </div>
                    <div class="col-12 col-md-4">
                        <div class="text-muted small">Bodily Injury</div>
                        <div class="fw-semibold">@(Model.InjuryCost?.ToString("C0") ?? "N/A")</div>
                    </div>
                    <div class="col-12 col-md-4">
                        <div class="text-muted small">Property Damage</div>
                        <div class="fw-semibold">@(Model.PropertyCost?.ToString("C0") ?? "N/A")</div>
                    </div>
                </div>
                <div class="d-flex justify-content-between align-items-center mt-3 p-3 rounded" style="background:#f8fafc;border:1px solid #e2e8f0;">
                    <div class="fw-semibold">Total Payout</div>
                    <div class="fs-5 fw-bold">@(Model.TotalAmount?.ToString("C0") ?? "N/A")</div>
                </div>
            </div>

            <div class="card-elevated p-3 mt-3">
                <h5 class="mb-3">Incident Details</h5>
                <div class="row g-3">
                    <div class="col-12 col-md-6">
                        <div class="text-muted small">Incident Date & Time</div>
                        <div class="fw-semibold">@(Model.IncidentDate?.ToShortDateString() ?? "N/A") at @(Model.IncidentHour?.ToString() ?? "N/A"):00</div>
                    </div>
                    <div class="col-12 col-md-6">
                        <div class="text-muted small">Collision</div>
                        <div class="fw-semibold">@Model.CollisionType</div>
                    </div>
                    <div class="col-12 col-md-6">
                        <div class="text-muted small">Driver</div>
                        <div>@Model.DriverRelationship (Age @Model.DriverAge)</div>
                    </div>
                    <div class="col-12 col-md-6">
                        <div class="text-muted small">Scene</div>
                        <div>@Model.VehiclesInvolved Vehicles, @Model.Witnesses Witnesses</div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-12 col-lg-4">
            <div class="alert alert-warning small">This claim is closed. To reopen, contact your adjuster.</div>
        </div>
    </div>
</div>

@{
    ViewData["Title"] = "Home Page";
}

<div class="minimal-container accent-card">
    <div class="hero mb-4">
        <h1>Manage policies and claims with confidence</h1>
        <p>Fast access to your policies, quick claim overviews, and clear account details — all in one place.</p>
        <div class="hero-actions">
            <a class="btn btn-primary" asp-controller="Account" asp-action="Register">Get started</a>
            <a class="btn btn-soft" asp-controller="Account" asp-action="Login">Sign in</a>
        </div>
    </div>

    <h2 class="page-title title-gradient">Contact Us</h2>
    <p class="page-subtitle mb-4">Have a question? Send us a message.</p>
    <form method="post" asp-controller="Home" asp-action="SubmitForm" class="stack">
        <div class="minimal-field">
            <label for="name">Name</label>
            <input type="text" id="name" name="name" class="form-control" required />
        </div>
        <div class="minimal-field">
            <label for="email">Email</label>
            <input type="email" id="email" name="email" class="form-control" required />
        </div>
        <div class="minimal-field">
            <label for="phone">Phone Number</label>
            <input type="tel" id="phone" name="phone" class="form-control" required />
        </div>
        <button type="submit" class="btn btn-primary w-100">Submit</button>
    </form>
</div>
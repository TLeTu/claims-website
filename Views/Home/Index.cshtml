@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <div class="container d-flex justify-content-center align-items-center" style="min-height: 60vh;">
        <div class="row w-100" style="max-width: 800px;">
            <div class="col-md-6 d-flex flex-column justify-content-center align-items-start mb-4 mb-md-0 pe-md-5">
                <ul class="list-unstyled mb-4">
                    <li class="mb-2"><span class="fw-semibold">Instant Online Quote</span></li>
                    <li class="mb-2"><span class="fw-semibold">All Car Models Covered</span></li>
                    <li class="mb-2"><span class="fw-semibold">24/7 Free Towing</span></li>
                </ul>
                <button class="btn btn-success px-4" type="button">Get Quote</button>
            </div>
            <div class="col-md-6">
                <form method="post" asp-controller="Home" asp-action="SubmitForm" class="w-100" style="max-width: 400px;">
                    <h2 class="mb-4">Contact Us</h2>
                    <div class="mb-3 text-start">
                        <label for="name" class="form-label">Name</label>
                        <input type="text" class="form-control" id="name" name="name" required />
                    </div>
                    <div class="mb-3 text-start">
                        <label for="email" class="form-label">Email</label>
                        <input type="email" class="form-control" id="email" name="email" required />
                    </div>
                    <div class="mb-3 text-start">
                        <label for="phone" class="form-label">Phone Number</label>
                        <input type="tel" class="form-control" id="phone" name="phone" required />
                    </div>
                    <button type="submit" class="btn btn-primary w-100">Submit</button>
                </form>
            </div>
        </div>
    </div>


</div>